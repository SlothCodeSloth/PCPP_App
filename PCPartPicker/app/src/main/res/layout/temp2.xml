<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/headerLayout"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listTitleTextView"
            android:text="List Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="?attr/colorOnSurfaceVariant"
            android:textColor="?attr/colorOnSurfaceInverse"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bundlePriceTextView"
            android:text="Total: $0.00"
            android:background="@drawable/background_price_header"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_gravity="end"
            android:textColor="?attr/colorOnSurfaceInverse"
            app:layout_constraintTop_toTopOf="@+id/listTitleTextView"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bundleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundle Name"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bundleURLButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Link"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/bundleNameTextView"
        app:layout_constraintEnd_toEndOf="@id/bundleNameTextView"
        app:layout_constraintStart_toStartOf="@+id/bundleNameTextView"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/componentRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/bundleURLButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorSurface"/>



</androidx.constraintlayout.widget.ConstraintLayout>