<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogLayout"
    android:padding="24dp"
    android:background="@drawable/background_card">

    <TextView
        android:id="@+id/customLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Adjustments"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/storeLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Custom Vendor"
        android:textStyle="bold"
        android:paddingStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/customLabel"
        app:layout_constraintStart_toStartOf="@id/dialogLayout"/>

    <EditText
        android:id="@+id/customStoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Vendor"
        app:layout_constraintTop_toBottomOf="@id/storeLabelTextView"
        app:layout_constraintStart_toStartOf="@id/dialogLayout"
        app:layout_constraintEnd_toEndOf="@id/dialogLayout"
        android:padding="4dp"
        android:background="@drawable/background_text"
        />

    <TextView
        android:id="@+id/priceLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Price"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/customStoreTextView"
        app:layout_constraintStart_toStartOf="@id/dialogLayout"
        android:layout_marginTop="12dp"
        android:padding="4dp"/>

    <EditText
        android:id="@+id/customPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Price"
        app:layout_constraintTop_toBottomOf="@id/priceLabelTextView"
        app:layout_constraintStart_toStartOf="@id/dialogLayout"
        android:padding="4dp"
        android:background="@drawable/background_text"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/urlLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor URL"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/customPriceTextView"
        app:layout_constraintStart_toStartOf="@+id/dialogLayout"
        android:padding="4dp"
        />

    <EditText
        android:id="@+id/customURLTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter URL"
        app:layout_constraintTop_toBottomOf="@+id/urlLabelTextView"
        app:layout_constraintStart_toStartOf="@id/dialogLayout"
        android:padding="4dp"
        android:background="@drawable/background_text"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/customURLTextView"
        app:layout_constraintEnd_toEndOf="@id/customURLTextView"
        android:layout_marginTop="12dp"
        android:backgroundTint="?attr/colorSecondary"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/customURLTextView"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="?attr/colorSecondary"/>

</androidx.constraintlayout.widget.ConstraintLayout>