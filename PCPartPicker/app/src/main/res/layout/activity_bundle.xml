<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listTitleTextView"
        android:text="List Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorOnSurfaceVariant"
        android:textColor="?attr/colorOnSurfaceInverse"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/bundleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundle Name"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/listTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bundlePriceTextView"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bundlePriceTextView"
        android:text="Total: $0.00"
        android:background="@drawable/background_price_header"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_gravity="end"
        android:textColor="?attr/colorOnSurfaceInverse"
        app:layout_constraintTop_toBottomOf="@+id/listTitleTextView"
        app:layout_constraintEnd_toEndOf="@id/listTitleTextView"/>

    <Button
        android:id="@+id/bundleURLButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Link"
        android:textSize="12dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/bundlePriceTextView"
        app:layout_constraintStart_toStartOf="@id/bundlePriceTextView"
        app:layout_constraintEnd_toEndOf="@id/bundlePriceTextView"
        android:backgroundTint="?attr/colorSecondary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/componentRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/bundleURLButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorSurface"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addComponentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_add_24"
        android:backgroundTint="?attr/colorSecondary"
        app:tint="?attr/colorOnSurfaceInverse" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bundleSettingsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addComponentFab"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/bottom_nav_settings"
        android:backgroundTint="?attr/colorSecondary"
        app:tint="?attr/colorOnSurfaceInverse" />

</androidx.constraintlayout.widget.ConstraintLayout>